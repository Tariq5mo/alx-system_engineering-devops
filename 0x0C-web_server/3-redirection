#!/usr/bin/env bash
# Configure a Nginx server to redirect to another page
sudo apt update
sudo apt install nginx -y
sudo ufw allow "Nginx HTTP"
sudo nginx
echo "Hello World!" > sudo tee /var/www/html/*.html
sudo sed -i "/listen 80 default_server;/a location /redirect_me {\nroot localhost\nreturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4; \n} \n" /etc/nginx/sites-available/default

sudo nginx -s reload
